<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <inset android:insetLeft="0dp" android:insetTop="0dp"
            android:insetRight="0dp" android:insetBottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Background color -->
                <stroke android:width="2dp" android:color="#000000"/> <!-- Border -->
                <corners android:radius="8dp"/> <!-- Rounded corners -->
            </shape>
        </inset>
    </item>

    <!-- Dropdown Icon -->
    <item android:drawable="@drawable/ic_dropdown" android:gravity="end|center_vertical"/>
</layer-list>
