<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- Ensures that the ScrollView takes up the full screen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Add your content here
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />-->

        <!-- More views here -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1024dp"
            android:background="@drawable/bgaddupdatesupplier"
            tools:context=".AddUpdateSupFragment">

            <Spinner
                android:id="@+id/ddsupplierid"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-11dp"
                android:layout_toEndOf="@+id/textView5"
                android:background="@drawable/spinner_border" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="97dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="53dp"
                android:layout_marginTop="243dp"
                android:text="Supplier ID"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtsuppliername"
                android:layout_width="261dp"
                android:layout_height="55dp"
                android:layout_below="@+id/ddsupplierid"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Supplier Name"
                android:inputType="text" />

            <Button
                android:id="@+id/btnPickTime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/txtcutofftime"
                android:layout_alignBottom="@+id/txtcutofftime"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/txtcutofftime"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/square_button_oranglight"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawablePadding="8dp"
                android:text="Select Time"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnadd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickTime"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="74dp"
                android:backgroundTint="@color/blue"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/square_button_blue"
                android:drawableLeft="@drawable/iconadd"
                android:drawablePadding="8dp"
                android:text="add"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnupdate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnPickTime"
                android:layout_alignParentStart="true"
                android:layout_marginStart="73dp"
                android:layout_marginTop="13dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/square_button_greenlight"
                android:drawableLeft="@drawable/iconupdate"
                android:drawablePadding="8dp"
                android:text="Update"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/txtphone"
                android:layout_width="261dp"
                android:layout_height="55dp"
                android:layout_below="@+id/txtcontactperson"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Phone"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtcontactperson"
                android:layout_width="261dp"
                android:layout_height="55dp"
                android:layout_below="@+id/txtsuppliername"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Contact Person"
                android:inputType="text" />

            <EditText
                android:id="@+id/txtemail"
                android:layout_width="261dp"
                android:layout_height="55dp"
                android:layout_below="@+id/txtphone"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtcutofftime"
                android:layout_width="136dp"
                android:layout_height="57dp"
                android:layout_below="@+id/txtemail"
                android:layout_alignParentStart="true"
                android:layout_marginStart="77dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Cutoff Time"
                android:inputType="text" />

        </RelativeLayout>
    </LinearLayout>
</android.widget.ScrollView>