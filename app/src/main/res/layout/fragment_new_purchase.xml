<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">  <!-- Ensures that the ScrollView takes up the full screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add your content here
            <TextView
                android:id="@+id/txtContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />-->

            <!-- More views here -->

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1344dp"
            tools:context=".NewPurchaseFragment">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/newsales" />

                <EditText
                    android:id="@+id/txtcustomername"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/textView13"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Customer Name"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnsearch"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnscan"
                    android:layout_alignStart="@+id/btnscan"
                    android:layout_alignEnd="@+id/btnscan"
                    android:layout_marginStart="-22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="-4dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/square_button_darkorange"
                    android:drawableLeft="@drawable/iconsearch"
                    android:drawablePadding="8dp"
                    android:text="search"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtsupplierinpur"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtsup"
                    android:layout_alignBottom="@+id/txtsup"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/txtsup"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtsup"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:text="Unit Price: "
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtsup"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtproductpurchase"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:text="Supplier: "
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtunitprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/textView7"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtsubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView10"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/textView10"
                    android:text="0.00"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rbgcash"
                    android:layout_alignStart="@+id/rbgcash"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="13dp"
                    android:text="Subtotal:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView9"
                    android:layout_alignStart="@+id/rbgcash"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="13dp"
                    android:text="Change:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_alignStart="@+id/rbgcash"
                    android:layout_marginStart="51dp"
                    android:layout_marginTop="13dp"
                    android:text="Total:"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txttotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView9"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="-1dp"
                    android:layout_toEndOf="@+id/textView9"
                    android:text="0.00"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView13"
                    android:layout_alignBottom="@+id/textView13"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@+id/textView13"
                    android:text="0.00"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/ddbatchnumber3"
                    android:layout_width="333dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/spinner_border" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/btnsearch"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:text="Batch Number"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txtquantity"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Quantity"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txtdiscountlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/txtcash"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Discount"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/txtreference"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/txtdiscountlabel"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Reference Number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/txtcash"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/txtcustomername"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Cash"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/txtproductid"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="218dp"
                    android:ems="10"
                    android:enabled="true"
                    android:hint="Product ID"
                    android:inputType="text" />

                <RadioButton
                    android:id="@+id/rbcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtquantity"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="88dp"
                    android:text="Cash"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rbgcash"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtquantity"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="13dp"
                    android:text="GCash"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtproductpurchase"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ddbatchnumber3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:text="Product Purchase: "
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtquantity"
                    android:layout_alignBottom="@+id/txtquantity"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="-2dp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/square_button_greenlight"
                    android:drawableLeft="@drawable/iconadd"
                    android:drawablePadding="8dp"
                    android:text="add"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <!-- Scrollable Table Layout -->

                <Button
                    android:id="@+id/btnprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtreference"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/blue"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/square_button_blue"
                    android:drawableLeft="@drawable/iconprint"
                    android:drawablePadding="8dp"
                    android:text="print"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnpdfreceipt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txtreference"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_toStartOf="@+id/btnprint"
                    android:background="@drawable/square_button_green"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:drawableLeft="@drawable/logopdf"
                    android:drawablePadding="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="print"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnConnectPrinter"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtreference"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="13dp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/square_button_greenlight"
                    android:drawableLeft="@drawable/iconbluetooth"
                    android:drawablePadding="8dp"
                    android:text="connect"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnscan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txtproductid"
                    android:layout_alignBottom="@+id/txtproductid"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="@color/blue"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/square_button_blue"
                    android:drawableLeft="@drawable/iconscan"
                    android:drawablePadding="8dp"
                    android:text="scan"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnConnectPrinter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="0dp"
                    android:importantForAccessibility="no"
                    android:nestedScrollingEnabled="true"
                    android:fillViewport="true">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:importantForAccessibility="no">

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnConnectPrinter"
                            android:background="@color/table_background"
                            android:padding="5dp"
                            android:showDividers="middle"
                            android:stretchColumns="*" />
                    </HorizontalScrollView>
                </ScrollView>

            </RelativeLayout>

        </LinearLayout>
</androidx.core.widget.NestedScrollView>


